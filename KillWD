# Função para simular o travamento do sistema
Function Simulate-SystemFreeze {
    Write-Host "Simulando o travamento do sistema... (Esse processo não pode ser revertido sem reiniciar o computador)"

    # Criar um processo de loop infinito que consome 100% da CPU
    $process = Start-Process powershell -ArgumentList "-NoExit", "-Command", {
        while ($true) {
            # Simula o uso de 100% da CPU com um loop infinito
            [System.Threading.Thread]::Sleep(1000)
        }
    }

    Write-Host "Sistema travado. O script precisa ser reiniciado para reverter a situação."
}

# Chama a função que simula o travamento
Simulate-SystemFreeze
